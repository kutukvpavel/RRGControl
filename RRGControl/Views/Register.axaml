<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="250"
			 x:Class="RRGControl.Views.Register"
			 Content="{Binding }">
	<Grid ColumnDefinitions="auto,*,30,30" RowDefinitions="auto,auto">
		<Label Grid.Column="0" Grid.RowSpan="2" Content="{Binding Name}"></Label>
		<MaskedTextBox Grid.Column="1" Grid.Row="0" IsVisible="{Binding ShowTextbox}" Mask="{Binding TextboxMask}"></MaskedTextBox>
		<ComboBox Grid.Column="1" Grid.Row="1" IsVisible="{Binding ShowCombobox}" Items="{Binding ComboboxItems}"></ComboBox>
		<Button Grid.Column="2" Grid.RowSpan="2">R</Button>
		<Button Grid.Column="3" Grid.RowSpan="2">W</Button>
	</Grid>
</UserControl>
