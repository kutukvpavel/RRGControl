<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RRGControl.ViewModels"
        xmlns:local="using:RRGControl.Views"
        x:Class="RRGControl.Views.CreateScript"
        Title="Script Creation" Width="950" Height="750"
        WindowStartupLocation="CenterOwner">
    <Design.DataContext>
        <vm:CreateScriptViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="420, *">
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15" Spacing="12">
                <TextBlock Text="Info" FontWeight="Bold" FontSize="16" Foreground="#0b7e65"/>
                <TextBox Watermark="Script Name" Text="{Binding ScriptName, Mode=TwoWay}"/>
                <TextBox Watermark="Comment" Text="{Binding Comment, Mode=TwoWay}" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                <Separator/>
                <TextBlock Text="Step configuration" FontWeight="Bold" FontSize="16" Foreground="#0b7e65"/>
                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Text="Duration (sec):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Text="{Binding NewDuration, Mode=TwoWay}"/>
                </Grid>
                <TextBlock Text="Set flow rates (ml/min):" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                <ItemsControl ItemsSource="{Binding SetpointsUnderConstruction}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="120, *" Margin="0,2">
                                <TextBlock Text="{Binding UnitName}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBox Grid.Column="1" 
                                        Text="{Binding Setpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        Watermark="0.0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Add step" Command="{Binding AddCommand}" 
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                        Background="#0b7e65" Foreground="White" FontWeight="Bold" Margin="0,10,0,0"/>
                <Separator/>
                <TextBlock Text="Command sequence" FontWeight="Bold" FontSize="16" Foreground="#0b7e65"/>
                <ListBox ItemsSource="{Binding Commands}" 
                         SelectedItem="{Binding SelectedCommand}" 
                         Height="160" SelectionMode="Single,Toggle">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplaySummary}" FontSize="12"/> 
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Spacing="5">
                    <Grid ColumnDefinitions="*, *">
                        <Button Grid.Column="0" Content="Delete step" 
                                Command="{Binding RemoveCommand}" 
                                HorizontalAlignment="Stretch" Margin="0,0,5,0"/>
                        
                        <Button Grid.Column="1" Content="Generate JSON" 
                                Command="{Binding SaveScriptCommand}" 
                                Background="#1e7a1e" Foreground="White" HorizontalAlignment="Stretch"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1, 0, 0, 0" Padding="15">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="PREVIEW" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
                <local:ScriptPreview DataContext="{Binding PreviewViewModel}" />
            </DockPanel>
        </Border>
    </Grid>
</Window>