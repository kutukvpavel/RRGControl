<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:RRGControl.Views"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="RRGControl.Views.Connection">
	<TabControl DataContext="{Binding Units}" Items="{Binding}">
		<TabControl.ItemTemplate>
			<DataTemplate>
				<TextBlock Text="{Binding Name}" Background="{Binding TabColor}"></TextBlock>
			</DataTemplate>
		</TabControl.ItemTemplate>
		<TabControl.ContentTemplate>
			<DataTemplate>
				<local:RRGUnit DataContext="{Binding}"></local:RRGUnit>
			</DataTemplate>
		</TabControl.ContentTemplate>
	</TabControl>
</UserControl>
